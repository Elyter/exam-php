        <div class="row mt-3 mb-4">
            <div class="col-md-4">
            <img src="{{ asset('/uploads/images/' ~ donnees.image) }}" alt="{{ donnees.name }}" style="height: 300px"  />
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ donnees.name }}</h1>
                <h2>{{ donnees.price }} â‚¬</h2>
                <hr>
                <b>Description: </b>{{ donnees.description }}
